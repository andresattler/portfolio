.container
  display flex
  flex-flow column
  height 100vh
  justify-content center
  align-items center
  background-color #090b0d
.picture
  border-radius 50%
  width 300px
  height 300px
  border 2px solid #1d5b91
  box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
.heading, .description, .button
  font-family monospace
.heading
  color #1d5b91
.description
  color #b58900
.button
  color #7494a3
  background-color #1f2326
  padding 5px
  box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
  cursor pointer
